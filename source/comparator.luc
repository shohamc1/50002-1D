module comparator (    
    input alufn[6], //alufn
    input a[16],
    input b[16],
    
    output out[16]
  ) {
  
  sig holder[16];
  
  always {
  
    holder = 0;
    
    case(alufn) {
      1: holder = c{15b0, (a == b)}; // equals
      2: holder = c{15b0, (a < b)}; // less than
      3: holder = c{15b0, (a <= b)}; // less than or equals
    }
    
    out = holder[15-:16];   
    
  }
}